{
  "name": "ntoma",
  "version": "1.0.0",
  "engines": {
    "node": "^10.15.3",
    "npm": "^6.4.1"
  },
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brakwaku/ntoma.git"
  },
  "author": "Kwaku Appau-Nkansah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brakwaku/ntoma/issues"
  },
  "homepage": "https://github.com/brakwaku/ntoma#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "stripe": "6.28.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^1.19.1"
  }
}
